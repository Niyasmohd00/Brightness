<body>
    <!--::header part start::-->
    <%- include("../partials/user/header") %>

<!-- Header part end-->
<div class="container mt-3"><h3>Home</h3></div>

<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h2>MAKE YOUR INTERIOR WITH BRIGHTNESS</h2>
                        <p>Set up the mirrors in your house with good quality and looking</p>
                        <a href="/showProducts" style="margin-bottom: 8rem;" class="btn_1 ">shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="banner_img">
        <img src="img/led19.jpg" alt="#" class="img-fluid">
        <img src="img/banner_pattern.png " alt="#" class="pattern_img img-fluid">
    </div>
</section>
<!-- banner part start-->

<!-- product list start-->
<section class="single_product_list">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="single_product_iner">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-lg-6 col-sm-6">
                            <div class="single_product_img">
                                <img src="img/led16.jpg" class="img-fluid" alt="#">
                                <img src="img/product_overlay.png" alt="#" class="product_overlay img-fluid">
                            </div>
                        </div>
                        <div class="col-lg-5 col-sm-6">
                            <div class="single_product_content">
                                <h5>Started from 1899</h5>
                                <h2> <a href="single-product.html">MAKE YOUR INTERIoR WITH BRIGHTNESS</a> </h2>
                                <a href="/showProducts" class="btn_3">Explore Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product list end-->

<!-- trending item start-->
<section class="trending_items">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>Trending Items</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <% if (trendingProducts.length === 0) { %>
                <div class="no-products-message">
                    <p>No trending products found.</p>
                </div>
            <% } else { %>
                <% trendingProducts.forEach((product) => { %>
                    <div class="col-lg-4 col-sm-6 col-4 mb-4">
                        <div class="single_product_item">
                            <div class="single_product_item_thumb">
                                <a href="/eachProduct?id=<%= product._id %>" class="product-link">
                                    <% if (product.productImages && product.productImages.length > 0) { %>
                                        <img src="/uploads/re-image/<%= product.productImages[0] %>" 
                                             class="img-fluid" 
                                             alt="<%= product.productName %>" 
                                             onerror="this.onerror=null;this.src='/styles/images/no_images.jpg';">
                                    <% } else { %>
                                        <img src="/styles/images/no_images.jpg" 
                                             class="img-fluid" 
                                             alt="No image available">
                                    <% } %>
                                </a>
                            </div>
                            <h3><a href="/eachProduct?id=<%= product._id %>"><%= product.productName %></a></h3>
                            <p>From <del>₹<%= product.mrp %></del> ₹<%= product.price %></p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</section>
<!-- trending item end-->

<!-- subscribe part here -->
<section class="subscribe_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="subscribe_part_content">
                    <h2>Get promotions & updates!</h2>
                    <p>Seamlessly empower fully researched growth strategies and interoperable internal or “organic” sources credibly innovate granular internal .</p>
                    <div class="subscribe_form">
                        <input type="email" placeholder="Enter your mail">
                        <a href="#" class="btn_1">Subscribe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- subscribe part end -->

<!--::footer_part start::-->
<%- include("../partials/user/footer") %>


