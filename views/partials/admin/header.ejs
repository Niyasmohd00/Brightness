<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="/css/all.css">
    <style>
        /* Wrapper and layout styling */
        #wrapper {
            display: flex;
            flex-direction: row;
            height: 100vh;
        }

        #sidebar-wrapper {
            width: 250px;
            transition: width 0.4s;
        }

        /* Page content */
        .page-content {
            flex: 1;
            overflow-y: auto;
        }

        /* Hamburger icon */
        .hamburger {
            display: inline-block;
            cursor: pointer;
            margin-right: 20px;
        }

        .line {
            display: block;
            width: 25px;
            height: 3px;
            background-color: #000;
            margin: 4px 0;
            transition: 0.4s;
        }

        /* Toggle sidebar visibility */
        #wrapper.toggled #sidebar-wrapper {
            width: 0;
            overflow: hidden;
        }

        /* Sidebar heading */
        .sidebar-heading {
            font-size: 2rem;
            font-weight: bold;
            color: #FFD700;
            text-align: center;
            padding: 15px 0;
            text-transform: uppercase;
        }

        /* Centered heading */
        .navbar-brand {
            font-size: 2rem;
            font-weight: bold;
            color: #FFD700;
            text-align: center;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* Sidebar and Navbar combined styling */
        .navbar {
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
            border-bottom: 1px solid #e0e0e0;
        }

        .list-group-item {
            border: none;
        }
    </style>
</head>

